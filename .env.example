# XOFlowers AI Agent Environment Configuration

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ChromaDB Configuration
CHROMADB_PATH=./chroma_db_flowers
CHROMADB_COLLECTION=xoflowers_products

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Instagram Configuration
INSTAGRAM_VERIFY_TOKEN=your_instagram_verify_token_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_WEBHOOK_URL=https://your-domain.com/api/instagram/webhook

# Security Settings
MAX_MESSAGE_LENGTH=1000
SECURITY_ENABLED=true

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# Monitoring Settings
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Business Information
BUSINESS_NAME=XOFlowers
BUSINESS_PHONE=+373_XX_XXX_XXX
BUSINESS_EMAIL=contact@xoflowers.md
BUSINESS_WEBSITE=https://xoflowers.md
BUSINESS_LOCATION=Chișinău, Moldova