# OpenAI API Key (Required for AI Agent ULTRA)
OPENAI_KEY=your_openai_api_key_here

# Instagram API Configuration
INSTAGRAM_VERIFY_TOKEN=xoflowers_verify_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_PAGE_ID=your_instagram_page_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# ChromaDB ULTRA Configuration
CHROMADB_PATH=./chroma_ultra_db
CHROMADB_ULTRA_ENABLED=true
CHROMADB_COLLECTION_NAME=xoflowers_ultra

# AI Agent Configuration
AI_AGENT_MODE=ultra
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500
AI_MODEL=gpt-3.5-turbo

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=INFO
MAX_SEARCH_RESULTS=20
CACHE_TIMEOUT=3600

# Security Settings
SECRET_KEY=your_secret_key_here
RATE_LIMIT=100
